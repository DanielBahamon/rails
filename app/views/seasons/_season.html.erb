<div class="card mb-1">
  <div class="card-header">
    <h2 class="mb-0">
      <button class="btn btn-link <% if season_iteration.index != 0 %>collapsed<% end %>" type="button" data-toggle="collapse" data-target="#<%= dom_id(season) %>">
        <% if season.number == 0 %>
          Specials
        <% else %>
          Season <%= season.number %>
        <% end %>
      </button>
    </h2>
  </div>

  <div id="<%= dom_id(season) %>" class="collapse <% if season_iteration.index == 0 %>show<% end %>" data-parent="#season-list">
    <div class="card-body">
      <%= render season.episodes.sorted_by_number %>
    </div>
  </div>
</div>
