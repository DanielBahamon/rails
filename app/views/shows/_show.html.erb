<div class="row">
  <div class="col">
    <% if show.image.present? %>
      <%= link_to show do %>
        <% image_tag show.image, width: 150 %>
      <% end %>
    <% end %>
  </div>
  <div class="col col-lg-10">
    <h3><%= link_to show.title, show %></h3>
    <p><%= show.overview %></p>
    <p><%= show.seasons.without_specials.count %> Seasons</p>

    <% if current_user.subscriptions.where(show: show).none? %>
      <%= link_to 'Subscribe', show_subscription_path(show), method: :post, class: "btn btn-primary" %>
    <% else %>
      <%= link_to 'Unubscribe', show_subscription_path(show), method: :delete, class: "btn btn-danger" %>
    <% end %>
  </div>
</div>

<hr />
